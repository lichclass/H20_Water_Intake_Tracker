<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.HomeFragment">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Daily Consumption Section (First White Box) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="8dp"
                android:elevation="4dp">

                <!-- Row for Daily Consumption Title and Settings Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Title: Daily Consumption -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daily Consumption"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <!-- Settings Icon -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/modify_button" />
                </LinearLayout>

                <!-- Row for Logo and Goal/Progress/Motivation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <!-- Water Drop Icon (Logo) -->
                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/app_logo" />

                    <!-- Vertical Layout for Goal, Progress, and Motivation -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Goal Text -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goal:"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:paddingRight="8dp"
                                android:textStyle="bold" />

                            <!-- Goal of the water -->
                            <TextView
                                android:id="@+id/waterGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0mL"
                                android:textColor="#44B3FF"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- FrameLayout to overlay text on ProgressBar -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <!-- Progress Bar -->
                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:progress="10"
                                android:max="100"
                                android:progressTint="#4A90E2"
                                android:progressBackgroundTint="#BFC3F7" />

                            <!-- Progress Text overlaid on the ProgressBar -->
                            <TextView
                                android:id="@+id/progressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0mL / 0mL"
                                android:textSize="14sp"
                                android:textColor="#E0E0E0"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <!-- Motivational Message -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You're Doing Great!!"
                            android:textSize="14sp"
                            android:textColor="#4A90E2"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Section (Second White Box) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="8dp"
                android:elevation="4dp">

                <!-- Progress Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <!-- Horizontal Layout for the Three Progress Indicators -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <!-- Daily Progress -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- FrameLayout for Circular Progress and Icon -->
                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <!-- Circular Progress Bar (Approximated) -->
                            <ProgressBar
                                android:id="@+id/dailyProgress"
                                style="@android:style/Widget.ProgressBar"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:progress="50"
                                android:max="100"
                                android:progressTint="#4A90E2"
                                android:layout_gravity="center"/>

                            <!-- Smiley Icon -->
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_info_details"
                                android:layout_gravity="center"
                                app:tint="#4A90E2" />

                        </FrameLayout>

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Weekly Progress -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- FrameLayout for Circular Progress and Icon -->
                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <!-- Circular Progress Bar (Approximated) -->
                            <ProgressBar
                                android:id="@+id/weeklyProgress"
                                style="@android:style/Widget.ProgressBar"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:progress="50"
                                android:max="100"
                                android:progressTint="#8BC34A"
                                android:layout_gravity="center"/>

                            <!-- Smiley Icon -->
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_info_details"
                                android:layout_gravity="center"
                                app:tint="#8BC34A" />
                        </FrameLayout>

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Monthly Progress -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- FrameLayout for Circular Progress and Icon -->
                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <!-- Circular Progress Bar (Approximated) -->
                            <ProgressBar
                                android:id="@+id/monthlyProgress"
                                style="@android:style/Widget.ProgressBar"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:progress="25"
                                android:max="100"
                                android:progressTint="#26A69A"
                                android:layout_gravity="center"/>

                            <!-- Sad Icon -->
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_info_details"
                                android:layout_gravity="center"
                                app:tint="#26A69A" />
                        </FrameLayout>

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Today's Forecast Section (Third White Box) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="8dp"
                android:elevation="4dp">

                <!-- Today's Forecast Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Forecast"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <!-- Date and Day -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="April 10 2025"
                        android:textColor="#4A90E2"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_day_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Thursday"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:paddingLeft="10dp"/>
                </LinearLayout>

                <!-- Horizontal Layout for Temperature, Weather, and Humidity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Temperature Icon -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="#FF5722" />

                        <!-- Temperature Value -->
                        <TextView
                            android:id="@+id/temp_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26Â°C"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Weather -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Weather Icon -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_day"
                            app:tint="#FFCA28" />

                        <!-- Weather Value -->
                        <TextView
                            android:id="@+id/weather_cond_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunny"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Humidity Icon -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="#4A90E2" />

                        <!-- Humidity Value -->
                        <TextView
                            android:id="@+id/humidity_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="62%"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- History Section (Fourth White Box) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="8dp"
                android:elevation="4dp">

                <!-- History Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <!-- Header Row for ListView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#E0E0E0">

                    <!-- Water Intake Column Header -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Water Intake (mL)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <!-- Date & Time Column Header -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date n Time"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="end"/>
                </LinearLayout>

                <!-- ListView for History Entries -->
                <ListView
                    android:id="@+id/historyListView"
                    android:layout_width="350dp"
                    android:layout_height="67dp"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fixed add water button, so it doesnt move when mo scroll -->
    <ImageButton
        android:id="@+id/addWaterButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/add_water_button"
        android:background="@drawable/blue_circle_background"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:contentDescription="Add Water" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>